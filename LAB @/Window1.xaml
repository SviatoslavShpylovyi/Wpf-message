<Window x:Class="LAB__.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB__"
        mc:Ignorable="d"
        Title="Connection" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>
    <Label Grid.Row="0" Grid.Column="0"> Username:</Label>
    <Label Grid.Row="0" Grid.Column="1"> Password:</Label>
    <Label Grid.Row="2" Grid.Column="0"> Address:</Label>
    <Label Grid.Row="2" Grid.Column="1"> Port:</Label>
        <TextBox Name="UserNameField" Grid.Row="1" Grid.Column="0" Margin="5,5,5,20"/>
        <TextBox Name="AddressField" Grid.Row="3" Grid.Column="0" Margin="5,5,5,20" />
        <PasswordBox Name="PasswordField" Grid.Row="1" Grid.Column="1" Margin="5,5,5,20" />
        <TextBox  Name ="PortField" Grid.Row="3" Grid.Column="1" Margin="5,5,5,20"/>
        <Button Name="Submit" Grid.Row="4" Grid.ColumnSpan="2" Background="Blue" Foreground="White" Click="ConnectNewUser"    Margin="5,5,5,20" >Submit</Button>
        <ProgressBar  IsIndeterminate="True" Height ="20" Grid.Row="5" Grid.ColumnSpan="2" Visibility="Hidden" Margin="5,5,5,5" Name ="Bar"></ProgressBar>
    </Grid>
</Window>
