<Window x:Class="LAB__.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB__"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="400" MinHeight="420" MinWidth="480"
       PreviewKeyDown="ShiftEneterd" Closing="CloseWindow">

    <Window.Resources>
            <DataTemplate x:Key="LeftMessage">
            <Border Background="DarkOrange"
            CornerRadius="15"
            Margin="0,5,40,5"
            Padding="0,5,20,5"
            HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock Text="{Binding Username}" FontWeight="Bold" Foreground="White" />
                    <TextBox Background="Transparent" IsReadOnly="True" BorderThickness="0" Text="{Binding _Message, Mode=OneWay}"  Foreground="White" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding TimeStamp}" Foreground="Gray" FontSize="10"  TextAlignment="Right"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="RightMessage">
                <Border Background="DarkOrange"
            CornerRadius="15"
            Margin="40,5,0,5"
            Padding="40,5,10,5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock Text="{Binding Username}" FontWeight="Bold" Foreground="White" />
                    <TextBox Background="Transparent" IsReadOnly="True" BorderThickness="0" Text="{Binding _Message, Mode=OneWay}" Foreground="White" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding TimeStamp}" Foreground="Gray" TextAlignment="Right" FontSize="10"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="SystemMessage">
                    <Label Content="{Binding _Message}" Foreground="DarkGray" HorizontalContentAlignment="Center" HorizontalAlignment="Center"/>
        </DataTemplate>

        <local:MessageSelector x:Key="Selector" 
                         LeftMessage ="{StaticResource LeftMessage}"
                       RightMessage="{StaticResource RightMessage}"
                       SystemMessage="{StaticResource SystemMessage}"/>
    </Window.Resources>
    






    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height =" Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width=" Auto"/>
        </Grid.ColumnDefinitions>


        <Menu Grid.Row="0" Grid.Column="1">
            <MenuItem Header=" File">
                <MenuItem Header="Connect" Name ="con_menu" IsEnabled="True" Click="Connect_Chatter"/>
                <MenuItem Header="Disconnect" Name="dis_menu" IsEnabled="False" Click="Disconnect_Chatter"/>
                <MenuItem Header="Exit" IsEnabled="True" Click="Exit_event"/>
            </MenuItem>
            <MenuItem Header=" Help">
                <MenuItem Header="About" IsEnabled="True" Click="About_click"/>
            </MenuItem>
        </Menu>
        <ListView HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Name="Chat"  Grid.Row="1" Grid.Column="1" ItemTemplateSelector="{StaticResource ResourceKey=Selector}"></ListView>
        <TextBox TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled"  Name="MessegeField" Grid.Row ="2" Grid.Column="1" Width=" 400" HorizontalAlignment="Left"></TextBox>
        <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Width="200" Click="Send_Message" >Send</Button>
    </Grid>
</Window>
